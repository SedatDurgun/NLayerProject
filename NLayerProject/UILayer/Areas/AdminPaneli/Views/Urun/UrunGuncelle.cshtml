@model UrunGuncelleDTO

<h2>Urun Guncelleme Sayfası </h2>

@using ApplicationLayer.Models.DTO_s
@using UILayer.Models




<div style="width:400px" >
 <form method="post"  asp-action="UrunGuncelle"enctype="multipart/form-data" >
     <table class="table" >
            <tr>
                @* <td><label asp-for="UrunID"></label></td> *@
                <td><input asp-for="UrunID" class="form-control" type="hidden" /></td>
            </tr>
         <tr>
                <td><label asp-for="UrunAdi" ></label></td>
                <td><input asp-for="UrunAdi" class="form-control" /></td>
         </tr>

            <tr>
                <td><label asp-for="KategoriID"></label></td>
                <td><select asp-for="KategoriID" asp-items="@ViewBag.Kategoriler"></select></td> 
            </tr>

            <tr>
                <td><label asp-for="Fiyat"></label></td>
                <td><input asp-for="Fiyat" /></td>
            </tr>

            <tr>
                <td><label asp-for="Acıklama"></label></td>
                <td><textarea asp-for="Acıklama" cols="80" rows="3" ></textarea></td>
            </tr>

            <tr>
                <td><label asp-for="Resim"></label></td>
                <td><input asp-for="Resim" /></td>
            </tr>

            <tr>
                <td><label asp-for="UrunVideo"></label></td>
                <td><input asp-for="UrunVideo" /></td>
            </tr>

            <tr>
                <td colspan="2" >
                    <input type="submit" value="Ürün Güncelle "  class="btn btn-dark" />
                </td>

            </tr>
            <tr>
                <td colspan="2" >
                    <div asp-validation-summary="All" ></div> <!--Kullanıcı herbir veriyi eklemek zorunda -->
                </td>
            </tr>
     </table>

 </form>



</div>


